extends layout 

block content 
  h2 Delete Category 

  p #[strong Name: ] #{category.name}
  p #[strong Description: ] #{category.description}

  if categoryItems.length > 0
    p Delete category from the following items before attempting to delete this category.
    ul 
      each item in categoryItems
        li.mt-2 
          a(href=item.url) #{item.name}
  else 
    p Are you sure you want to delete this category?
    
    form(method='POST' action='')
      div.form-group 
        input#categoryId(type='hidden' name='categoryId' required='true' value=category._id)
      button.btn.btn-primary.mt-2 Delete