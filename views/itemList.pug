extends layout 

block content 
  h2=title 

  if itemList && itemList.length > 0
    div.row
      each item in itemList
        article.col-12.col-md-6
          h3 
            a(href=item.url) #{item.name} 
          if item.category.length > 0
            p.fs-6.mt-2 #[strong Category: ]
              each category, index in item.category
                if index == item.category.length - 1
                  a(href=category.url) #{category.name}
                else 
                  a(href=category.url) #{category.name + ', '}
          p #{item.description}
          div.d-flex
            p #[strong Price:] $ 
              span #{item.price}
            if item.numberInStock > 0
              p.ms-auto #[strong #{item.numberInStock}] in stock.
            else 
              p.ms-auto No stock.
  else 
    p No items available.
